<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Justificar_Isencao</fullName>
    <active>true</active>
    <description>Essa regra torna o campo Justiticativa obrigatório quando uma oportunidade tiver isenção de CI ou de Taxa de Matrícula.</description>
    <errorConditionFormula>AND(($Permission.Bypass_Permission = False),
AND(
Isencao__c,
ISBLANK(Justificativa_do_valor_da_proposta__c)))</errorConditionFormula>
    <errorDisplayField>Justificativa_do_valor_da_proposta__c</errorDisplayField>
    <errorMessage>É preciso justificar a isenção.</errorMessage>
</ValidationRule>
