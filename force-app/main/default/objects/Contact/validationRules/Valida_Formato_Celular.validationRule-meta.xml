<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Valida_Formato_Celular</fullName>
    <active>false</active>
    <errorConditionFormula>NOT(
OR(
ISBLANK( MobilePhone  ),    
REGEX(MobilePhone,&quot;\\([0-9]{2}\\)( )[0-9]{4,5}-[0-9]{4}&quot;)
)
)</errorConditionFormula>
    <errorDisplayField>MobilePhone</errorDisplayField>
    <errorMessage>Formato incorreto</errorMessage>
</ValidationRule>
